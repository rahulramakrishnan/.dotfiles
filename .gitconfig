[diff]
    tool = vimdiff
[user]
    name = Rahul Ramakrishnan
    email = rahulr@uber.com
[core]
    excludesfile = /Users/rahul/.gitignore
[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    br = branch
    cm = commit
    cma = commit --amend
    co = checkout
    df = diff
    lg = log --oneline --graph
    lgl = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    st = status
    standup = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --since yesterday --author rahul
[push]
    default = matching
[merge]
    tool = vimdiff
[branch]
    autosetuprebase = always
[rerere]
    enabled = true
[url "ssh://git@github.com/uber/"]
    insteadOf = https://github.com/uber/
[url "ssh://gitolite@code.uber.internal/"]
    insteadOf = git://code.uber.internal/
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
