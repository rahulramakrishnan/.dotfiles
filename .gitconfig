[diff]
    tool = vimdiff

[user]
	name = Rahul Ramakrishnan
	email = rahul.ramakrishnan10@gmail.com

[core]
    excludesfile = /Users/rahul/.gitignore

[push]
    default = matching

[branch]
        autosetuprebase = always

[rerere]
        enabled = true

[merge]
    tool = vimdiff

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process

[color]
    branch = auto
    diff = auto
    status = auto
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    br = branch
    cm = commit
    cma = commit --amend
    co = checkout
    diffm = diff master --name-only
    lgl = log --oneline --graph
    lge = log --format='%H %aN %aE'
    lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    pom = pull origin main
    ram = rebase main
    rim = rebase -i main
    pum = push origin main
    st = status
    standup = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --since yesterday --author rahul
    update = checkout master && pull origin master && checkout - && rebase master
